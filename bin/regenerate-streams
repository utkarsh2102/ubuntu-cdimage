"""Regenerate cdimage simplestreams for the given tree."""

from optparse import OptionParser
import os
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))


def main():
    from cdimage.config import Config
    from cdimage.tree import Publisher, Tree
    from cdimage.simplestreams import SimpleStreams

    parser = OptionParser(
        "%prog TYPE\n"
        "TYPE=daily for the daily build tree (www/full/), release for "
        "the release subtrees on cdimage (www/full/releases etc.), "
        "official for official (www/simple/) Ubuntu releases.")
    _, args = parser.parse_args()
    if len(args) < 1:
        parser.error("need type")
    streamtype = args[0]
    config = Config()
    config["SIMPLESTREAMS"] = "1"
    sstreams = SimpleStreams.get_simplestreams_by_name(config, streamtype)
    print("Regenerating %s simplestreams..." % streamtype)
    sstreams.generate()


if __name__ == "__main__":
    main()
