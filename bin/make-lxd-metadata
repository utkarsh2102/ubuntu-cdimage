"""Generate lxd metadata for the given image."""

from optparse import OptionParser
import os
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))


def main():
    from cdimage.metadata import generate_ubuntu_core_image_lxd_metadata

    parser = OptionParser(
        "%prog IMAGE_PATH\n"
        "Currently supports only Ubuntu Core images.")
    _, args = parser.parse_args()
    if len(args) < 1:
        parser.error("need path to the image")
    image_path = args[0]
    print("Generating LXD metadata for {}".format(image_path))
    generate_ubuntu_core_image_lxd_metadata(image_path)


if __name__ == "__main__":
    main()
