"""Authenticate cdimage instance on Launchpad."""

from optparse import OptionParser
import os
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))


def main():
    from cdimage.launchpad import get_launchpad

    parser = OptionParser(
        "%prog INSTANCE\nHelper to authenticate Launchpad for livefs build support."
    )
    _, args = parser.parse_args()
    if len(args) < 1:
        parser.error("need instance type")
    instance = args[0]
    lp = get_launchpad()
    # Now perform any arbitrary LP API call to trigger the authorization.
    lp.distributions["ubuntu"]
    print("Authentication for %s should be complete" % instance)


if __name__ == "__main__":
    main()
