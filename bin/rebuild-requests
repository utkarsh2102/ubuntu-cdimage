"""Fetches the list of pending rebuilds."""

from optparse import OptionParser
import os
import socket
import subprocess
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))


def main():
    from cdimage.config import Config, Series
    from cdimage.tree import Publisher, Tree

    parser = OptionParser(usage="Usage: %prog [options] SERIES INSTANCE")
    parser.add_option(
        "-b",
        "--build",
        help="Build any pending product",
        action="store_true",
        default=False,
    )
    parser.add_option(
        "-c",
        "--cancel",
        help="Cancel any pending/stuck build",
        action="store_true",
        default=False,
    )
    parser.add_option(
        "-n",
        "--dry-run",
        help="Print the commands that would normally be run",
        action="store_true",
        default=False,
    )
    parser.add_option(
        "-q",
        "--quiet",
        help="Hide all info messages",
        action="store_true",
        default=False,
    )
    parser.add_option(
        "--wsl-github-token",
        help="Path to WSL github secrets",
        default="~/.wsl-github-token",
    )
    options, args = parser.parse_args()

    if len(args) < 2:
        parser.error("need series and instance")

    # Constructing a config modifies the ARCHES and CPUARCHES
    # environment variables which we do not want to set when invoking
    # builds, so copy the environment now.
    clean_env = dict(os.environ)

    config = Config()
    tree = Tree.get_daily(config)
    publisher = Publisher.get_daily(tree, "daily")

    # Only import it here to avoid --help failing from the bzr branch
    from isotracker import ISOTracker

    tracker = ISOTracker(target="%s-%s" % (args[1], args[0]))

    if not options.build and not options.cancel:
        # List all the pending entries
        for rebuild in tracker.qatracker.get_rebuilds("Requested"):
            if rebuild.series_title.lower() != args[0]:
                continue

            print(
                " - %s for %s (requested by %s) => %s "
                % (
                    rebuild.product_title,
                    rebuild.series_title,
                    rebuild.requestedby_name,
                    publisher.cdimage_project(rebuild.product_title, args[1]),
                )
            )
        return

    if options.cancel:
        # Iterate through all non-final states
        for rebuild in tracker.qatracker.get_rebuilds(
            ["Requested", "Queued", "Building", "Built"]
        ):
            if rebuild.series_title.lower() != args[0]:
                continue

            print(
                " - %s for %s (requested by %s) => %s (status: %s) "
                % (
                    rebuild.product_title,
                    rebuild.series_title,
                    rebuild.requestedby_name,
                    publisher.cdimage_project(rebuild.product_title, args[1]),
                    rebuild.status,
                )
            )

            if not options.dry_run:
                rebuild.status = 5
                rebuild.save()
        return

    # Process any pending rebuild
    rebuilds = {}
    queue = tracker.qatracker.get_rebuilds("Requested")
    processes = []

    # Group everything by project+build_type
    for rebuild in queue:
        if rebuild.series_title.lower() != args[0]:
            continue

        project = publisher.cdimage_project(rebuild.product_title, args[1])

        if not project:
            print("Invalid entry '%s' for '%s'" % (rebuild.product_title, args[0]))
            continue

        project_id = "%s/%s" % (project[0], project[1])

        if project_id not in rebuilds:
            rebuilds[project_id] = []

        rebuilds[project_id].append([rebuild] + list(project))

    for project_id, entries in rebuilds.items():
        if not options.quiet:
            print("Processing rebuilds for: %s" % project_id)

        project, build_type = project_id.rsplit("/", 1)
        sub_project = None
        if "/" in project:
            project, sub_project = project.split("/", 1)

        arches = " ".join([entry[4] for entry in entries])

        for entry in entries:
            # Marking the entry as "queued"
            if not options.dry_run:
                entry[0].status = 1
                entry[0].save()

            if not options.quiet:
                print(
                    " - %s for %s (requested by %s) => %s "
                    % (
                        entry[0].product_title,
                        entry[0].series_title,
                        entry[0].requestedby_name,
                        entry[1:],
                    )
                )

        env = {}
        if build_type == "wsl":
            # Ubuntu WSL is a special snowflake as it's not built by cdimage,
            # but we still want to be able to easily trigger rebuilds.
            if not options.quiet:
                print("Requested rebuild is for Ubuntu WSL")

            token_path = os.path.expanduser(options.wsl_github_token)
            try:
                with open(token_path) as f:
                    env["WSL_GITHUB_TOKEN"] = f.read().strip()
            except FileNotFoundError:
                print(
                    "Required WSL github credentials not found in the "
                    "expected path: %s" % token_path
                )
                return

            series = Series.find_by_name(args[0])
            wsl_id = None
            if "LTS" in series.displayversion(project):
                wsl_id = "Ubuntu%sLTS" % series.version
            elif series.is_latest():
                wsl_id = "UbuntuPreview"
            else:
                print(
                    "Requested WSL rebuild for %s: Ubuntu WSL only supports "
                    "Ubuntu LTS versions and the current development "
                    "series" % series.version
                )
                return

            # This is the expected filename of the build-remote script from the
            # Ubuntu WSL github repository
            cmd = [
                "gh-wsl-build-remote",
                "-r",
                "https://cloud-images.ubuntu.com/%s/current/"
                "%s-server-cloudimg-amd64-wsl.rootfs.tar.gz"
                "::amd64" % series.name,
                wsl_id,
            ]

            # If we're running on ancientminister (or any internal Canonical
            # instance) pre-configure an HTTPS proxy for the github action
            # calls.
            if socket.getfqdn().endswith(".internal"):
                cmd.extend(["--https-proxy", "http://squid.internal:3128/"])
        else:
            if sub_project:
                env["SUBPROJECT"] = sub_project

            env["ARCHES"] = arches
            env["DIST"] = entries[0][0].series_title.lower()

            image_type = entry[2]
            if project == "ubuntu-base":
                # The ubuntu-base image is actually hacked up in overall, so
                # even though it's defined as "daily", it's a "daily-live" type
                image_type = "daily-live"
            elif project in ("ubuntu-core", "ubuntu-core-desktop", "ubuntu-appliance"):
                # The ubuntu-core images however are also a bit special, as
                # they have a different publish structure, CHANNEL arguments
                # and more
                env["EXTRA_PPAS"] = "snappy-dev/image"
                # Due to the different structure, IMAGE_TYPE is the channel
                # here
                env["CHANNEL"] = entry[2]
                # And cdimage still uses distro series for the core series
                # builds
                env["DIST"] = Series.find_by_core_series(env["DIST"]).name
                image_type = "daily-live"

            cmd = ["for-project", project, "cron.%s" % image_type]

            if build_type != "daily" or project in (
                "ubuntu-core",
                "ubuntu-core-desktop",
                "ubuntu-appliance",
                "ubuntu-base",
                "ubuntu-server",
            ):
                cmd += ["--live"]

        if options.dry_run:
            if not options.quiet:
                env_str = ""
                for key, value in env.items():
                    # It's best not to leak any secrets for dry-run mode
                    if key == "WSL_GITHUB_TOKEN":
                        value = "<REDACTED>"
                    env_str += '%s="%s" ' % (key, value)
                print("Dry-run: %s%s" % (env_str, " ".join(cmd)))
        else:
            exec_env = clean_env.copy()
            exec_env.update(env)
            processes.append(subprocess.Popen(cmd, env=exec_env))
        if not options.quiet:
            print("")

    if processes:
        if not options.quiet:
            print("Waiting for %s builds to complete." % len(processes))
        for process in processes:
            process.wait()


if __name__ == "__main__":
    main()
